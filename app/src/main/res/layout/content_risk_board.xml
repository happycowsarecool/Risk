<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_risk_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sheda.risk.RiskBoardActivity"
    tools:showIn="@layout/activity_risk_board">

    <HorizontalScrollView android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:fadingEdge="none" android:scrollbars="none">
        <ScrollView android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:fadingEdge="none" android:scrollbars="none">

            <LinearLayout
                android:id="@+id/Screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <com.example.sheda.risk.TouchImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/risk_board" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:shrinkColumns="*"
                    android:stretchColumns="*" >


                    <TableRow
                        android:id="@+id/Continents"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/Asia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:text="Asia"
                            android:textSize="24sp"
                            android:textColor="#b2ff59"/>

                        <TextView
                            android:id="@+id/North_America"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:text="North America"
                            android:textSize="24sp"
                            android:textColor="#afb42b"/>

                        <TextView
                            android:id="@+id/Europe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:text="Europe"
                            android:textSize="24sp"
                            android:textColor="#9575cd"/>

                        <TextView
                            android:id="@+id/Africa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:text="Africa"
                            android:textSize="24sp"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:id="@+id/South_America"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:text="South America"
                            android:textSize="24sp"
                            android:textColor="#ff7043"/>

                        <TextView
                            android:id="@+id/Australia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:gravity="center"
                            android:text="Australia"
                            android:textSize="24sp"
                            android:textColor="#f06292"/>

                    </TableRow>

                    <TableRow
                        android:id="@+id/country_button_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <Button
                            android:id="@+id/Australia_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Indonesia" />

                        <Button
                            android:id="@+id/North_America_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alaska" />

                        <Button
                            android:id="@+id/Europe_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Iceland" />

                        <Button
                            android:id="@+id/Africa_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="North Africa" />

                        <Button
                            android:id="@+id/South_America_1"
